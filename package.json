{
  "name": "claude-code-settings",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:ai": "set -o pipefail && biome lint . --reporter=github 2>&1 | { grep '^::' || true; }",
    "lint:fix": "biome lint --write .",
    "lint:unsafe-fix": "biome lint --write --unsafe .",
    "type-check": "tsc --noEmit",
    "type-check:ai": "tsc --noEmit --pretty false"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/bun": "^1.3.5",
    "ts-morph": "^27.0.2"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@mizchi/readability": "^0.7.7",
    "cc-hooks-ts": "^2.0.76",
    "github-reserved-names": "^2.1.1",
    "pathe": "^2.0.3",
    "playwright": "^1.57.0",
    "valibot": "^1.2.0"
  }
}
